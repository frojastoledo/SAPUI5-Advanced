<mvc:View controllerName="logaligroup.controller.HelloPanel"
           xmlns="sap.m" 
           xmlns:mvc="sap.ui.core.mvc"
           xmlns:core="sap.ui.core"
           displayBlock="true">

            <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
                  <content>
                    <Button id="helloDialogButton" 
                            icon="sap-icon://action" 
                            text="{i18n>helloDialogBut}" 
                            press=".onOpenDialog" 
                            class="sapUiSmallMarginEnd"></Button>
                    <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"></Button>
                    <Input value="{/recipient/name}"
                            valueLiveUpdate="true"
                            width="60%"> </Input>
                    <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"></Text>
                  </content>
                 
               </Panel>

            <core:Fragment fragmentName="logaligroup.view.Form01" type="XML"/>
</mvc:View> 