<core:FragmentDefinition xmlns:core= "sap.ui.core"
    xmlns="sap.m">

    <Dialog id="dialog1" title="{i18n>orders}">
        <content>
            <Table id="_IDGenTablee1" items="{odataNorthwind>Orders}" width="700px">
                <columns>
                    <Column id="_IDGenColumne1">
                        <header>
                            <Label id="_IDGenLabele1" text="{i18n>orderID}" />
                        </header>
                    </Column>

                    <Column id="_IDGenColumne2">
                        <header>
                            <Label id="_IDGenLabele2" text="{i18n>freight}" />
                        </header>
                    </Column>

                    <Column id="_IDGenColumne3">
                        <header>
                            <Label id="_IDGenLabele3" text="{i18n>shipAddress}" />
                        </header>
                    </Column>

                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListIteme1">
                        <cells>
                            <Label id="_IDGenLabele4" text="{odataNorthwind>OrderID}" />
                            <Label id="_IDGenLabele5" text="{odataNorthwind>Freight}" />
                            <Label id="_IDGenLabele6" text="{odataNorthwind>ShipAddress}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>

        <endButton>
            <Button id="_IDGenButtone1" text="{i18n>close}" press="onCloseOrders"></Button>
        </endButton>
    </Dialog>

</core:FragmentDefinition>