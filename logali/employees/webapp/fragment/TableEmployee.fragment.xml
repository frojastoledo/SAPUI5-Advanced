<core:FragmentDefinition xmlns:core= "sap.ui.core"
    xmlns="sap.m">

    <Panel id="panelt1">

        <Button id="btnShowCity" text="{i18n>showCity}" visible="{jsonModelConfig>/visibleBtnShowCity}" press="onShowCity"/>
        <Button id="btnHideCity" text="{i18n>hideCity}" visible="{jsonModelConfig>/visibleBtnHideCity}" press="onHideCity"/>

        <Table id="tableEmployee" items="{odataNorthwind>/Employees}">

            <columns>
                <Column id="col1" visible="{jsonModelConfig>/visibleID}">
                    <header>
                        <Label id="label1" text="{i18n>tableId}"></Label>
                    </header>
                </Column>
                <Column id="col2" visible="{jsonModelConfig>/visibleName}">
                    <header>
                        <Label id="label2" text="{i18n>tableName}"></Label>
                    </header>
                </Column>
                <Column id="col3" visible="{jsonModelConfig>/visibleCountry}">
                    <header>
                        <Label id="label3" text="{i18n>tableCountry}"></Label>
                    </header>
                </Column>
                <Column id="col4" visible="{jsonModelConfig>/visibleCity}">
                    <header>
                        <Label id="label4" text="{i18n>tableCity}"></Label>
                    </header>
                </Column>
                <Column id="col5" width="100px">
                    <header>
                        <Label id="label5" text="{i18n>tableShowDetails}"></Label>
                    </header>
                </Column>
                
            </columns>
            <items>
                <ColumnListItem id="colList" type="Navigation" press="showEmployee">

                    <cells>
                        <Label id="labeltext1" text="{odataNorthwind>EmployeeID}"></Label>
                        <Label id="labeltext2" text="{odataNorthwind>LastName},{odataNorthwind>FirstName}"></Label>
                        <Label id="labeltext3" text="{odataNorthwind>Country}"></Label>
                        <Label id="labeltext4" text="{odataNorthwind>City}"></Label>
                        <core:Icon id="icon1" src="sap-icon://show" press="showOrders"></core:Icon>
                    </cells>

                </ColumnListItem>
            </items>
        </Table>

        <HBox id="ordersTable"></HBox>

    </Panel>

</core:FragmentDefinition>
