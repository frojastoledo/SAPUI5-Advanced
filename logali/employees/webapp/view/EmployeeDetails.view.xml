<mvc:View controllerName="logaligroup.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="pageD" title="{i18n>employeeDetails}">


        <Panel id="_IDGenPanel1">
            <FlexBox id="_IDGenFlexBox1" height="65px" alignItems="Center" justifyContent="Center">
                <items>

                    <Text id="textD" text="{odataNorthwind>TitleOfCourtesy} {odataNorthwind>LastName} {odataNorthwind>FirstName}" class="boldText"></Text>

                </items>

            </FlexBox>


            <FlexBox id="_IDGenFlexBox2" height="65px" alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <VBox id="_IDGenVBox1">
                        <Text id="_IDGenText1" text="{i18n>employeeID}" class= "boldText sapUiTinyMarginEnd"/>
                        <Text id="_IDGenText2" text="{odataNorthwind>EmployeeID}"/>
                    </VBox>


                    <VBox id="_IDGenVBox2">
                        <Text id="_IDGenText3" text="{i18n>titleEmployee}" class= "boldText"/>
                        <Text id="_IDGenText4" text="{odataNorthwind>Title}"/>
                    </VBox>

                </items>

            </FlexBox>


            <FlexBox id="_IDGenFlexBox3" alignItems="Start">
                <items>
                    <HBox id="_IDGenHBox1">
                        <Text id="_IDGenText5" text="{i18n>countryCode}" class= "boldText sapUiTinyMarginEnd"/>
                        <Text id="_IDGenText6" text="{odataNorthwind>Country}"/>
                        <layoutData>
                            <FlexItemData id="_IDGenFlexItemData1" growFactor="3"></FlexItemData>
                        </layoutData>
                    </HBox>


                    <HBox id="_IDGenHBox2">
                        <Text id="_IDGenText7" text="{i18n>city}" class= "boldText sapUiTinyMarginEnd"/>
                        <Text id="_IDGenText8" text="{odataNorthwind>City}"/>
                        <layoutData>
                            <FlexItemData id="_IDGenFlexItemData2" growFactor="2"></FlexItemData>
                        </layoutData>
                    </HBox>

                    <FlexBox id="_IDGenFlexBox4" direction="Row" alignItems="Start">
                        <HBox id="_IDGenHBox3">
                            <Text id="_IDGenText9" text="{i18n>postalCode}" class= "boldText sapUiTinyMarginEnd"/>
                            <Text id="_IDGenText10" text="{odataNorthwind>PostalCode}"/>
                            <layoutData>
                                <FlexItemData id="_IDGenFlexItemData3" growFactor="1"></FlexItemData>
                            </layoutData>
                        </HBox>


                    </FlexBox>

                </items>

            </FlexBox>



        </Panel>

        <Panel class="sapUiSizeCompact" backgroundDesign="Transparent">
            <headerToolbar>
                <Toolbar>
                    <Title text="{i18n>incidence} {= ${odataNorthwind>Country} !=='USA' ? ${i18n>europe} : ${i18n>us}}"> </Title>
                    <ToolbarSpacer></ToolbarSpacer>
                    <Button text="{i18n>createIncidence}" press="onCreateIncidence"></Button>
                </Toolbar>
            </headerToolbar>
            <Panel id="tableIncidence" class="sapUiNoContentPadding" backgroundDesign="Transparent" ></Panel>
        </Panel>

    </Page>

</mvc:View>     