<mvc:View controllerName="logaligroup.controller.App"
           xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
           displayBlock="true">
      
    <Shell >
            <App >
        <pages>
            <Page title="{i18n>appTitle}">
                <headerContent>
                <Button id="helloDialogHeader" 
                            icon="sap-icon://action"  
                            press=".onOpenDialogHeader" 
                            class="sapUiSmallMarginEnd"></Button>
                    <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"></Button>
                </headerContent>
               <content>
               
                    <mvc:XMLView viewName="logaligroup.view.HelloPanel"/>
                    <mvc:XMLView viewName="logaligroup.view.InvoicesList"/>
               </content>
                    
                 
                
            </Page>
        </pages>
        
    </App>  
    </Shell>

    
  
</mvc:View> 


